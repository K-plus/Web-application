{% endblock styles %}

{% block content %}
    <div class="container-fluid">
        <!-- Page Heading -->
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">
           	        {{pageTitle}}
                    <small>{{subTitle}}</small>
                </h1>
                <ol class="breadcrumb">
                    <li class="active">
                        <i class="fa fa-home"></i> Overzicht
                    </li>
                </ol>
            </div>
        </div>
        <!-- /.row -->
				<div class="row">
                    <div clas="col-lg-12">
                        

                        <div class="col-lg-offset-2 col-lg-3 col-md-6">
