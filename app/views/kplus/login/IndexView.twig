{% extends 'kplus/BaseView.twig' %}

{% block styles %}
{% endblock styles %}

{% block content %}
    <div class="container-fluid">
        <!-- Page Heading -->
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">
           	        {{ pageTitle }}
                    <small>{{ subTitle }}</small>
                </h1>
                <ol class="breadcrumb">
                    <li>
                        <i class="fa fa-home"></i>  <a href="{{route('home')}}"> Overzicht</a>
                    </li>
                    <li class="active">
                        <i class="fa fa-exclamation-circle"></i> {{ pageTitle }}
                    </li>
                </ol>
            </div>
        </div>
        <!-- /.row -->
		
		<div class="row">
            <!-- Form -->
			<div class="col-lg-offset-4 col-lg-4">
				<div class="panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title"> {{ pageTitle }} </h3>
                    </div>
                    <div class="panel-body">
                        {% if not errors is empty %} 
                            {% for error in errors.all %}
                               {# {{dump(error)}} #}
                                <div class="alert alert-danger alert-dismissible" role="alert">
                                  <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                                  {{error}}
                                </div>
                            {% endfor %}
                        {% endif %}
                        <form method="POST" action="{{ route('authenticate')}}">
                            {{ Form.token()|raw }}
                            <!-- Form [Email] -->
                            <div class="form-group input-group">
                                <span class="input-group-addon"><i class="fa fa-fw fa-at"></i></span>
                                <input type="text" class="form-control" name="e-mail" placeholder="Email"value="{{Input.old('email')}}">
                            </div>
                            <!-- Form [Password] -->
                            <div class="form-group input-group">
                                <span class="input-group-addon"><i class="fa fa-fw fa-key"></i></span>
                                <input type="password" class="form-control" name="wachtwoord" placeholder="Wachtwoord">
                            </div>
                            <!-- Form [Submit-Button] -->
                            <button type="submit" class="btn btn-default">Login</button>

                            <a href="{{route('registration')}}" class="btn btn-primary pull-right">Registreer</a>
                        </form>     
                    </div>
                </div>
			</div>
            <!-- End Form -->
		</div>
    </div>
    <!-- /.container-fluid -->
{% endblock content %}

{% block javascript %}
{% endblock javascript %}
