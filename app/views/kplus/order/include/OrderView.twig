<div id="order-view">
	<div class="col-lg-12">
		<table class="table table-hover">
			<thead>
				<tr>
					<th>Product EAN</th>
					<th>Product Naam</th>
					<th>Product Prijs (in <i class="fa fa-euro"></i>)</th>
					<th>Aantal</th>
					<th>Subtotaal (in <i class="fa fa-euro"></i>)</th>
				</tr>
			</thead>
			<tbody>
				{% for orderLine in order.order_lines %}
				<tr>
					<td>{{orderLine.ean}}</td>
					<td>{{orderLine.product_name}}</td>
					<td><i class="fa fa-fw fa-euro"></i>{{orderLine.unit_price / 100}}</td>
					<td>{{orderLine.qty}}</td>
					<td><i class="fa fa-fw fa-euro"></i>{{orderLine.subtotal  / 100 }}</td>
				</tr>
				{% endfor %}
				<tr class="warning">
                    <td colspan="3">Totalen</td>
                    <td><span class="total-qty">{{totalQty}}</span></td>
                    <td><i class="fa fa-fw fa-euro"></i><span class="total-price">{{totalPrice / 100}}</span></td>
                </tr>
			</tbody>
		</table>
	</div>	
</div>