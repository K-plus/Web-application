{% extends 'kplus/BaseView.twig' %}

{% block styles %}
{% endblock styles %}

{% block content %}
<div class="container-fluid">
    <!-- Page Heading -->
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">
       			{{pageTitle}}
                <small>{{subTitle}}</small>
            </h1>
            <ol class="breadcrumb">
                <li>
                    <i class="fa fa-fw fa-home"></i>  <a href="{{route('home')}}"> Overzicht</a>
                </li>
                <li class="active">
                    <i class="fa fa-fw fa-shopping-cart"></i> {{pageTitle}}
                </li>
            </ol>
        </div>
    </div>
    <!-- /.row -->
	
	<div class="row">
		<div class="col-lg-12">
			{% if products|length == 0 %}
				<h2> Geen inventaris </h2>
			{% else %}
				<div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>EAN</th>
                                <th>Omschrijving</th>
                                <th>Prijs (<i class="fa fa-euro"></i>)</th>
                                <th>In voorraad</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
	                      	{% for product in products %}
	                      		<tr>
	                      			<td>{{ product.ean }}</td>
	                      			<td>{{ product.name }}</td>
	                      			<td><i class="fa fa-fw fa-euro"></i>{{ product.price / 100 }}</td>
	                      			<td>
	                      				{% if product.stock > 0 %}
	                      					<i class="fa fa-fw fa-check-circle"></i>
	                      				{% else %}
	                      					<i class="fa fa-fw fa-times"></i>
										{% endif %}
	                      			</td>
	                      			<td>
	                      				<button class="btn btn-sm btn-default"><i class="fa fa-fw fa-plus"></i></button>
	                      			</td>
	                      		</tr>
	                      	{% endfor %}
                        </tbody>
                    </table>
                </div>
			{% endif %}
		</div>
	</div>
</div>
{% endblock content %}

{% block javascript %}
{% endblock javascript %}